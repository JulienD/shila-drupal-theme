<section{{ attributes.addClass('card') }}>
  {% spaceless %}
    <div class="card__image">
      {{ image }}
    </div>
  {% endspaceless %}
  <div class="card__body">
    {% if title %}
      <h1 class="card__title">{{ title }}</h1>
    {% endif %}
    {% if content %}
      <div class="card__content">
        {% block content %}
          {{ content }}
        {% endblock %}
      </div>
    {% endif %}
    {% if link %}
      <p class="card__link">{{ link }}</p>
    {% endif %}
  </div>
</section>
