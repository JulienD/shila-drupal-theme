<section{{ attributes.addClass('card') }}>
  {% spaceless %}
    <div class="card__image">
      {{ image }}
    </div>
  {% endspaceless %}
  <div class="card__body">
    {{ contextual_links }}
    {{ title_prefix }}
    {% if title %}
      <h2 class="card__title">{{ title }}</h2>
    {% endif %}
    {{ title_suffix }}
    {% if content %}
      <div class="card__content">
        {% block content %}
          {{ content }}
        {% endblock %}
      </div>
    {% endif %}
    {% if actions %}
      <div class="card__actions">
        {{ actions }}
      </div>
    {% endif %}
  </div>
</section>
