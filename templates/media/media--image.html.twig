{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{% set attributes = attributes.addClass('image') %}
{% set image_type = content.field_image_type|render|striptags|trim %}
{% set credit_people = content.field_credit_people|render|striptags|trim %}
{% set credit_organizations = content.field_credit_organizations|render|striptags|trim %}
{% if credit_people and credit_organizations %}
  {% set credit %}{{ image_type }} {{ credit_people ~ ' / ' ~ credit_organizations }}.{% endset %}
{% elseif photographer or photo_agency %}
  {% set credit %}{{ image_type }} {{ credit_people }}{{ credit_organizations }}.{% endset %}
{% endif %}
{% include "@molecules/media/image/image.html.twig"
  with {
    'image': content.field_image,
    'caption': content.field_caption['#items'].0.value
  }
%}
